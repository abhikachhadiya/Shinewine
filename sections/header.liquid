<header>
  <div class="container">
    <div class="header_wrapper">
      <div class="header_logo">
        <a href="{{ routes.root_url }}">
          {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}
          {%- assign logo_height = settings.logo_width | divided_by: section.settings.logo.aspect_ratio -%}
          {% capture sizes %}(max-width: {{ section.settings.logo_width | times: 2 }}px) 50vw, {{ section.settings.logo_width }}px{% endcapture %}
          {% capture widths %}{{ section.settings.logo_width }}, {{ section.settings.logo_width | times: 1.5 | round }}, {{ section.settings.logo_width | times: 2 }}{% endcapture %}
          {{ section.settings.logo | image_url: width: 600 | image_tag:
            class: 'header__heading-logo motion-reduce',
            widths: widths,
            height: logo_height,
            width: settings.logo_width,
            alt: logo_alt,
            sizes: sizes,
            preload: true
          }}
         {% comment %} <img lazyload class="lazyload" src="{{ section.settings.logo | img_url: 'master' }}" data-src="{{ section.settings.logo | img_url: 'master' }}" />{% endcomment %}
        </a>
      </div>
      <nav>
        <ul class="nav_link_wrapper">
          {% for link in section.settings.menu.links %}
            <li class="nav_link">
              <a href='{{- link.url -}}'>{{- link.title -}}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
</header>


{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
    ]
  }
{% endschema %}

